<% layout("/layouts/boilerplate") %>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .row {
            display: flex;
            justify-content: center;
            margin: 20px 0;
        }

        .col-8 {
            max-width: 66.666667%;
            flex: 0 0 66.666667%;
        }

        .offset-2 {
            margin-left: 16.666667%;
        }

        .card {
            border: 1px solid #ccc;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .card-img-top {
            width: 100%;
            height: 50vh;
        }

        .card-body {
            padding: 15px;
        }

        .card-text {
            font-size: 18px;
            font-weight: bold;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        ul li {
            margin: 10px 0;
        }

        .button-container {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }

        a {
            text-decoration: none;
            color: #007bff;
            border: 1px solid #007bff;
            padding: 5px 10px;
            border-radius: 5px;
        }

        a:hover {
            background-color: #007bff;
            color: #fff;
        }

        button {
            padding: 5px 10px;
            font-size: 16px;
            cursor: pointer;
            color: #fff;
            background-color: #dc3545;
            border: none;
            border-radius: 5px;
        }

        button:hover {
            background-color: #c82333;
        }
    </style>
</head>
<body>
    <div class="row">
        <div class="col-8 offset-2">

            <h3>Listing Detail :</h3>

            <div class="card">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="LISTING_Image">
                <div class="card-body">
                    <p class="card-text"><%= listing.title %></p>
                </div>
            </div>

            <ul>
                <li><%= listing.title %></li>
                <li><%= listing.description %></li>
                <li>&#8377; <%= listing.price.toLocaleString("en-IN") %></li>
                <li><%= listing.location %></li>
                <li><%= listing.country %></li>
            </ul>

            <div class="button-container">
                <a href="/listings/<%= listing._id %>/edit" method="get">Edit</a>
                <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                    <button>Delete</button>
                </form>
            </div>
        </div>
    </div>
</body>

